<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="2dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <!--Text view for displaying our text -->
        <TextView
            android:id="@+id/solidcookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cook:"
            ></TextView>
        <TextView
            android:id="@+id/chefname"
            android:text="Tien"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/solidcookname"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:text="Steak and poutine"
            android:layout_below="@+id/chefname"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/meal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meal_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:text="Wagyuu A5"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="10sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/meal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/meal_name"
            android:padding="3dp"
            android:text="0"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/solid_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:layout_toEndOf="@+id/meal_price"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:padding="3dp"
            ></TextView>
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 1/10"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/solid_price"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            ></TextView>
        <Button
            android:id="@+id/purchase_btn"
            android:layout_toEndOf="@+id/rating"

            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#EDB4B7"
            android:text="Purchase"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>


    </RelativeLayout>

</androidx.cardview.widget.CardView>