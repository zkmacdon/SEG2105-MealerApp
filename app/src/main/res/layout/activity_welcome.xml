<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/mealerwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="56dp"
        android:text="Welcome to Mealer!"
        android:textColor="#A13D3D"
        android:textSize="34sp"
        android:typeface="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/usertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Type: User"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mealerwelcome" />

    <EditText
        android:id="@+id/search_text"
        android:layout_width="229dp"
        android:layout_height="41dp"
        android:hint="Find a meal!"
        android:layout_below="@+id/usertype"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />
    <Button
        android:id="@+id/searchButton"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#F5636C"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/search_text"/>

    <Button
        android:id="@+id/messagesButton"
        android:layout_width="137dp"
        android:layout_height="79dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#000000"
        android:text="Messages"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@+id/searchButton"
        />

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/logOutButton"
        android:layout_width="222dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#F5636C"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/messagesButton" />



</RelativeLayout>